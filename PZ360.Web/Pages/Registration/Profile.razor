@page "/profile"

@inject NavigationManager _navigationManager

<div class="row no-gutters top-menu align-items-center text-center">
    <div class="col-4 menu-desk">
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Let's Start <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Set Your Plan <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Profile <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Viola</a>
    </div>
    <div class="col-5 menu-mini">
        <div class="row">
            <a href="#"><img src="../images/paw.png" alt="paw.png" />Profile <img src="../images/Separator.png" alt="Separator.png" /></a>
            <span>2/3 Step Complete!</span>
        </div>

    </div>
</div>

<div class="row no-gutters set-plan-bg">
    <div class="col-md reg-content align-items-center text-center">
        <div class="row m-2 p-2">
            <div class="col-md">
                <button class="help-profile-question"><img src="../images/Question.png" /></button>
                <button class="next-profile-button" @onclick="OnGoNext">Next</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <div class="form-floating">
                    <h1>Introduce Yourself</h1>
                </div>
            </div>
        </div>
        <div class="row no-gutters align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="left-side profile-left">
                   <div class="row">
                       <div class="col-md">
                           <img src="../images/profile.png" alt="profile.png"/>
                       </div>
                     
                   </div>
                    <div class="row">
                        <div class="col-md d-flex profile-avatar-action">
                            <div class="row">
                                <div class="col-md-6">
                                    <button class="plan-button m-2">Upload Photo</button>
                                </div>
                                <div class="col-md-6">
                                    <button class="plan-button m-2">Create Avatar</button>
                                </div>
                                
                            </div>
                            
                        </div>
                   </div>
                    <div class="row profile-acct-connected">
                        <div class="col-md">
                           <div class="row">
                               <span><img src="../images/connected_acct.png" alt="connected_acct.png"/>Connected Account</span>
                               <hr />
                           </div>
                           <div class="row align-items-center">
                                <div class="form-floating">
                                    <div class="row">
                                        <div class="col d-flex m-1 profile-acct-third-party">
                                            <button class="rounded-button"><img src="../images/Google Sign In.png" /></button>
                                            <button class="rounded-button"><img src="../images/Facebook Sign In.png" /></button>
                                            <button class="rounded-button"><img src="../images/Twitter Sign In.png" /></button>
                                            <button class="rounded-button"><img src="../images/Linkedin Sign In.png" /></button>
                                        </div>
                                    </div>
                                </div>
                           </div>
                       </div>
                   </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-side profile-right">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <span><img src="../images/profile_info.png" alt="profile_info.png" />Profile Info</span>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="profile-form-control">
                                        <label for="firstname" title="First Name">First Name</label>
                                        <input class="form-text" type="text" id="firstname" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="profile-form-control">
                                        <label for="lastname" title="Last Name">Last Name</label>
                                        <input class="form-text" type="text" id="lastname" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <label for="emailaddress" title="Email Address">Email Address</label>
                                        <input class="form-text" type="email" id="emailaddress" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-form-control d-inline-flex">
                                        <input id="emailoptin" type="checkbox" class="form-check" /><label>Email Opt-In</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <label for="phone" title="phone">Phone</label>
                                        <input class="form-text" type="number" id="phone" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <label for="roles" title="Roles">Roles</label>
                                        <input class="form-text" type="text" id="roles" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <span><img src="../images/address.png" alt="address.png" />Address</span>
                                <hr />
                            </div>
                              <div class="row">
                                <div class="col-md">
                                   <div class="profile-form-control">
                                        <label for="address1" title="Address1">Address Line 1</label>
                                        <input class="form-text" type="text" id="address1" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <label for="address2" title="Address2">Address Line 2</label>
                                        <input class="form-text" type="text" id="address2" />
                                    </div>
                                </div>
                            </div>
                             <div class="row">
                                <div class="col-md-6">
                                   <div class="profile-form-control">
                                        <label for="city" title="City">City</label>
                                        <input class="form-text" type="text" id="city" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="profile-form-control">
                                        <label for="zipcode" title="ZipCode">Zip Code</label>
                                        <input class="form-text" type="text" id="zipcode" />
                                    </div>
                                </div>
                            </div>
                             <div class="row">
                                <div class="col-md-6">
                                  <div class="profile-form-control">
                                        <label for="state" title="state">State</label>
                                        <input class="form-text" type="text" id="state" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="profile-form-control">
                                        <label for="country" title="Country">Country</label>
                                        <input class="form-text" type="text" id="country" />
                                    </div>
                                </div>
                            </div>
                        </div>
                         <div class="col-md-8">
                            <div class="row">
                                <span><img src="../images/setpassword.png" alt="setpassword.png" />Set Password</span>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="profile-form-control">
                                        <label for="password" title="password">Password</label>
                                        <input class="form-text" type="password" id="password" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="profile-form-control">
                                        <label for="confirmpassword" title="Confirm Password">Confirm Password</label>
                                        <input class="form-text" type="password" id="confirmpassword" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-2 p-2">
            <div class="col-md">
                <button class="next-profile-bottom" @onclick="OnGoNext">Next</button>
            </div>
        </div>
    </div>
</div>
@code
{
    
    public void OnGoNext()
    {
        _navigationManager.NavigateTo($"/viola", true);
    }

    public void OnGoBack()
    {
        _navigationManager.NavigateTo($"/setplan", true);
    }
}
