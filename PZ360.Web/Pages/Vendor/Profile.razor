@page "/vendor/profile"

@inject NavigationManager _navigationManager

<div class="row no-gutters top-menu align-items-center text-center">
    <div class="col-8 menu-desk">
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Let's Start <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Set Your Plan <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Profile <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Contact Info <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Business Info <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Categories <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Checkout <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Viola</a>
    </div>
    <div class="col-4 menu-mini">
        <div class="row">
            <a href="#"><img src="../images/paw.png" alt="paw.png" />Profile <img src="../images/Separator.png" alt="Separator.png" /></a>
            <span>3/6 Step Complete!</span>
        </div>

    </div>
</div>

<div class="row no-gutters set-plan-bg">
    <div class="col-md reg-content align-items-center text-center">
        <div class="row m-2 p-2">
            <div class="col-md">
                <button class="help-profile-question"><img src="../images/Question.png" /></button>
                <button class="next-profile-button">Next</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <div class="form-floating">
                    <h1>Introduce Yourself</h1>
                </div>
            </div>
        </div>
        <div class="row no-gutters align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="left-side profile-left vendor-profile">
                    <div class="row">
                        <div class="col-md">
                            <div class="row">
                                <span><img src="../images/profile_info.png" alt="profile_info.png" />Profile Info</span>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <label for="companyname" title="Company Name">Company Name</label>
                                        <input class="form-text" type="text" id="companyname" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <RadzenRadioButtonList @bind-Value="@value" TValue="int">
                                        <Items>
                                            <RadzenRadioButtonListItem Text="Upload Pet Photo" Value="1" />
                                        </Items>
                                    </RadzenRadioButtonList>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <img class="vendor-dragdrop" src="../images/draganddrop.png" alt="draganddrop.png" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <RadzenRadioButtonList @bind-Value="@value" TValue="int">
                                        <Items>
                                            <RadzenRadioButtonListItem Text="Embed Preview Image" Value="2" />
                                        </Items>
                                    </RadzenRadioButtonList>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <input class="form-text" type="text" id="embedUrl" placeholder="Pasted Embed Url" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-side profile-right vendor-profile">
                    <div class="row">
                        <div class="col-md">
                            <div class="row">
                                <span><img src="../images/description.png" alt="description.png" />Description</span>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="profile-form-control">
                                        <RadzenHtmlEditor class="pz-editor"  Placeholder="Description" UploadUrl="upload/image" >
                                            <RadzenHtmlEditorUndo />
                                            <RadzenHtmlEditorRedo />
                                            <RadzenHtmlEditorSeparator />
                                            <RadzenHtmlEditorBold />
                                            <RadzenHtmlEditorItalic />
                                            <RadzenHtmlEditorUnderline />
                                            <RadzenHtmlEditorStrikeThrough />
                                            <RadzenHtmlEditorSeparator />
                                            <RadzenHtmlEditorColor />
                                            <RadzenHtmlEditorBackground />
                                            <RadzenHtmlEditorRemoveFormat />
                                        </RadzenHtmlEditor>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-2 p-2">
            <div class="col-md">
                <button class="next-profile-bottom">Next</button>
            </div>
        </div>
    </div>
</div>
@code
{
    public int value = 1;
}
