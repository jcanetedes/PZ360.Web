@page "/vendor/checkout-storefront"

@inject NavigationManager _navigationManager

<div class="row no-gutters top-menu align-items-center text-center">
    <div class="col-8 menu-desk">
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Let's Start <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Set Your Plan <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Profile <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Contact Info <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Business Info <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Categories <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw.png" alt="paw.png" />Checkout <img src="../images/Separator.png" alt="Separator.png" /></a>
        <a href="#"><img src="../images/paw_gray.png" alt="paw_gray.png" />Viola</a>
    </div>
    <div class="col-5 menu-mini">
        <div class="row">
            <a href="#"><img src="../images/paw.png" alt="paw.png" />Checkout <img src="../images/Separator.png" alt="Separator.png" /></a>
            <span>6/6 Step Complete!</span>
        </div>

    </div>
</div>

<div class="row no-gutters set-plan-bg">
    <div class="col-md reg-content align-items-center text-center">
        <div class="row m-2 p-2">
            <div class="col-md">

                <button class="back-checkout-button mt-2" @onclick="OnGoBack">Back</button>
                <button class="help-checkout-question m-0"><img src="../images/Question.png" /></button>
                <div class="row d-flex check-out-price-info">
                    <div class="col-md">
                        <p>Total: $99 Annually (Subscription)<button @onclick="OnPurchase" class="proceed-checkout-button">Proceed to Purchase</button></p>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <div class="form-floating">
                    <h1>Great Choice!</h1>
                </div>
            </div>
        </div>
        <div class="row check-out-content no-gutters align-items-center justify-content-center">
            <div class="row">
                <div class="col-md">
                    <h5>
                        Before You Finish Setting Up... <br />
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <p>
                        <br />

                        Please view below to view your selection and proceed to purchase.<br/>
                        Once your payment is processed, you will be able to enter your vendor storefront.

                    </p>
                    <br />
                </div>
            </div>
            <div class="row no-gutters align-items-center justify-content-center">
                <div class="col-md-4">
                    <div class="left-side vendor-check-out-right">
                        <img src="../images/checkoutbasic.png" alt="checkoutbasic.png" />
                    </div>
                </div>
                <div class="col-md-4 check-out-left">
                    <div class="right-side check-out-left">
                        <h5>
                            Your Vendor Package:<br />
                            3D Virtual Space- Small
                        </h5>
                        <br />
                        <h6>Features:</h6>
                        <div class="row">
                            <ul>
                                <li>
                                    Company Profile; Includes:
                                    Company Name, Physical Address, Phone, Website, Logo/Branding Image, Vendor Description<br />
                                    <i>*Display of these items optional*</i>
                                </li>
                                <li>Searchable by Company Name & Keywords</li>
                                <li>List 1 product or Service</li>
                                <li>
                                    Limited analytics:<br />
                                    <ul>
                                        <li>Total Visits</li>
                                        <li>Total Interactions</li>
                                        <li>Items Favorited</li>
                                        <li>Matches Recieved</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-2 p-2">
            <hr />
            <div class="col-md">
                <div class="row d-flex check-out-price-info-bottom">
                    <div class="col-md">
                        <div class="row">
                            <div class="col-md">
                                <p>Total: $99 Annually (Subscription)</p>
                            </div>
                            <div class="col-md">
                                <button @onclick="OnPurchase" class="proceed-checkout-button">Proceed to Purchase</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@code
{
    public void OnGoBack()
    {
        _navigationManager.NavigateTo($"/vendor/plan-selection", true);
    }
    public void OnPurchase()
    {
        _navigationManager.NavigateTo($"/vendor/viola-storefront", true);
    }
}
